doctype 5

case active
  when '/'
    homeClass = 'active'
    aboutClass = ''
    projectClass = ''
  when 'about'
    homeClass = ''
    aboutClass = 'active'
    projectClass = ''
  when 'advanced'
    homeClass = ''
    aboutClass = ''
    advancedClass = 'active'

html( lang="en" )
  head
    title=pageTitle
  body
    ul
      li(class=homeClass)
        a( href='/' ) home
      li(class=aboutClass)
        a( href='about' ) about
      li(class=advancedClass)
        a( href='advanced' ) advanced
    .container
      block content
